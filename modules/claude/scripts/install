#!/usr/bin/env bash
# Claude Code installation and Google Cloud authentication setup

set -e

echo ""
echo "Claude Code - Installation & Setup"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""

# 1. Install Google Cloud SDK (gcloud)
echo "→ Installing Google Cloud SDK..."
if ! command -v gcloud &> /dev/null; then
    if command -v dnf &> /dev/null; then
        # Fedora/RHEL - Official installation instructions from:
        # https://docs.cloud.google.com/sdk/docs/install-sdk#rpm

        # Add Google Cloud CLI repository
        sudo tee /etc/yum.repos.d/google-cloud-sdk.repo << EOM
[google-cloud-cli]
name=Google Cloud CLI
baseurl=https://packages.cloud.google.com/yum/repos/cloud-sdk-el9-x86_64
enabled=1
gpgcheck=1
repo_gpgcheck=0
gpgkey=https://packages.cloud.google.com/yum/doc/rpm-package-key.gpg
EOM

        # Install required compatibility library
        echo "  → Installing compatibility library..."
        sudo dnf install -y libxcrypt-compat.x86_64

        # Install Google Cloud CLI
        echo "  → Installing Google Cloud CLI package..."
        sudo dnf install -y google-cloud-cli
    elif command -v apt-get &> /dev/null; then
        # Debian/Ubuntu
        echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | sudo tee /etc/apt/sources.list.d/google-cloud-sdk.list
        curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key --keyring /usr/share/keyrings/cloud.google.gpg add -
        sudo apt-get update && sudo apt-get install -y google-cloud-cli
    else
        echo "✗ Error: Unsupported package manager. Please install gcloud manually."
        exit 1
    fi
    echo "✓ Google Cloud SDK installed"
else
    echo "✓ Google Cloud SDK already installed"
fi

# 2. Run gcloud auth application-default login
echo ""
echo "→ Setting up Google Cloud authentication..."
echo "  This will open a browser for authentication."
echo ""

gcloud auth application-default login

echo ""
echo "✓ Google Cloud authentication configured"

# 3. Install Claude Code
echo ""
echo "→ Installing Claude Code..."
if ! command -v claude &> /dev/null; then
    curl -fsSL https://claude.ai/install.sh | bash
    echo "✓ Claude Code installed"
else
    echo "✓ Claude Code already installed"
fi

echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "✓ Setup complete!"
echo ""
echo "Claude Code is now configured to use Google Vertex AI."
echo "Environment variables will be loaded on your next Fish shell session."
echo ""
