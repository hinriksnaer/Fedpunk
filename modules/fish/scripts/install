#!/usr/bin/env fish
# Fish shell post-install setup
# Handles: Setting fish as default shell

# Set fish as default shell if not already
if test "$SHELL" != (which fish)
    echo "Setting fish as default shell..."
    chsh -s (which fish)

    if test $status -eq 0
        echo "✓ Fish is now your default shell"
        echo "  Please log out and back in for changes to take effect"
    else
        echo "✗ Failed to set fish as default shell"
        echo "  You may need to run: chsh -s $(which fish)"
    end
else
    echo "✓ Fish is already your default shell"
end
