#!/usr/bin/env fish
# Refresh walker configuration and restart walker
# Usage: fedpunk-refresh-walker

# Copy walker config from dotfiles to system location (if using stow, this may not be needed)
# set walker_config "$HOME/Fedpunk/walker/.config/walker/config.toml"
# if test -f "$walker_config"
#     cp "$walker_config" "$HOME/.config/walker/config.toml"
#     echo "✓ Updated walker config"
# end

# Restart walker to apply changes
pkill walker 2>/dev/null
and echo "✓ Walker restarted"
or echo "⊘ Walker was not running"

echo ""
echo "Walker refreshed. Launch with Super+Space to see changes."
