# Monitor Configuration
# This file is auto-sourced by hyprland.conf
# Generated from chezmoi template with mode detection

{{- if .isContainer }}
# Container mode - no monitor configuration needed
{{- else if .isLaptop }}
# Laptop mode - internal display with optional external monitors
# Internal display (auto-detect)
monitor=,preferred,auto,1

# External monitor support (auto-enable when connected)
# Uncomment and customize if you have a specific external monitor setup
# monitor=DP-1,2560x1440@60,1920x0,1
# monitor=HDMI-A-1,1920x1080@60,1920x0,1

{{- else }}
# Desktop mode - multi-monitor setup
{{- if eq .hostname "fedora" }}
# Custom configuration for this specific desktop
monitor=,{{ .primaryResolution }},0x0,{{ .primaryScale }}

# Add additional monitors here as needed
# monitor=DP-2,2560x1440@144,2560x0,1
{{- else }}
# Default desktop configuration (auto-detect)
monitor=,preferred,auto,1
{{- end }}
{{- end }}

# To customize your monitors, you have two options:
#
# Option 1: Use wdisplays (GUI)
#   1. Run: wdisplays
#   2. Configure your displays
#   3. It will generate the config for you
#
# Option 2: Use hyprctl (CLI)
#   hyprctl monitors  # List available monitors
#
# Format: monitor=NAME,RESxRES@HZ,POSxPOS,SCALE
