#!/usr/bin/env fish
# Install Rofi application launcher

# Skip if not enabled in mode
if not set -q FEDPUNK_INSTALL_ROFI; or test "$FEDPUNK_INSTALL_ROFI" != "true"
    exit 0
end

# Initialize FEDPUNK_PATH if not set
if not set -q FEDPUNK_PATH
    set -gx FEDPUNK_PATH "{{ .chezmoi.sourceDir }}"
end
source "$FEDPUNK_PATH/home/core/lib/helpers.fish"

section "Rofi Installation"

subsection "Installing Rofi"

install_packages rofi-wayland

echo ""
success "Rofi installed successfully"
